<% if Spree::Slide.published.count > 0 %>
<div id='spree-slider' class="slider-border" data-hook="dh_spree_slider">
  <style type="text/css">

  .slider-border {
     margin:0 auto 0 auto;
     height:300px;
  }

  .theme-default #slider {
      margin: 15px;
      width:518px; /* Make sure your images are the same size */
      height:300px; /* Make sure your images are the same size */
      text-align: left;
  }
  .slider-wrapper {
      margin:0 auto 10px auto;
  }
  </style>


      <div class="slider-wrapper theme-default">
        <div class="ribbon"></div>
        <div id="slider" class="nivoSlider">
          <% Spree::Slide.published.each do |s| %>
            <% if s.body != "" %>
              <%= link_to image_tag(s.image.url, :title => '#' + s.name.to_url), s.link_url %>
            <% else %>
              <%= link_to image_tag(s.image.url), s.link_url %>
            <% end %>
          <% end %>
        </div>

        <% Spree::Slide.published.each do |s| %>
          <div id='<%= s.name.to_url %>' class='nivo-html-caption'>
            <%= s.body.html_safe %>
          </div>
        <% end %>
      </div>

  <script type="text/javascript">
  $(window).load(function() {
      $('#slider').nivoSlider();
  });
  </script>

</div>
<% end %>

